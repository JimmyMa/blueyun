# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.GlobalApp.index()

# Authorization
POST   /login                       controllers.GlobalApp.authenticate()

# User
POST   /user                        controllers.Application.addUser()

# Gallery
GET    /gallery/cats/:catid/:pageId         controllers.gallery.Gallery.getCategoriesByParentId(catid: Long, pageId: Int)
GET    /:userid/gallery/cats/:catid/:pageId  controllers.gallery.Gallery.getSecuredCategoriesByParentId(userid: Long, catid: Long, pageId: Int)
# GET    /images/cat/:catId            controllers.gallery.Gallery.getImagesByCatId(catId: Long)
# GET    /:userid/images/cat/:catId    controllers.gallery.Gallery.getSecuredImagesByCatId(catId: Long)
POST   /gallery/cat                  controllers.gallery.Gallery.createCategory()
POST   /gallery/cat/:catId           controllers.gallery.Gallery.updateCategory(catId: Long)
DELETE   /:userid/gallery/cat/:catId           controllers.gallery.Gallery.deleteCategory(userid: Long, catId: Long)
PUT   /gallery/img/:imgId           controllers.gallery.Gallery.updateImage(imgId: Long)
DELETE   /:userid/gallery/img/:imgId           controllers.gallery.Gallery.deleteImage(userid: Long, imgId: Long)
POST   /gallery/img/:catId         controllers.gallery.Gallery.upload(catId: Long)
PUT   /:userid/gallery/img/s/:imgId         controllers.gallery.Gallery.updateImageStatus(userid: Long, imgId: Long)
PUT   /:userid/gallery/cat/s/:catId         controllers.gallery.Gallery.updateCategoryStatus(userid: Long, catId: Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
